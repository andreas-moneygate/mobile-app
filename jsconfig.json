{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "assets/*": ["src/assets/*"],
      "config": ["src/config/index"],
      "constants/*": ["src/constants/*"],
      "components/*": ["src/components/*"],
      "routes/*": ["src/routes/*"],
      "utils/*": ["src/utils/*"],
      "types/*": ["src/types/*"],
      "theme/*": ["src/theme/*"],
      "state/*": ["src/state/*"],
      "hooks/*": ["src/hooks/*"]
    }
  },
  "exclude": ["node_modules"]
}
